<div id='ticket'>
  <h2><%= @ticket.title %></h2>
  <br><small>Created by <%= @ticket.user.email %></small>
  <%= simple_format(@ticket.description) %>

  <% if @ticket.assets.exists? %>
    <h3>Attatched Files</h3>
    <div class="assets">
      <% ticket.assets.each do |asset| %>
        <p>
          <%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
        </p>
        <p>
          <small>
            <%= number_to_human_size(@ticket.asset.size) %>
            (<%= @ticket.asset.content_type %>)
          </small>
        </p>  
      <% end %>
    </div>
  <% end %>


</div>

<%= authorized?("edit tickets", @project) do %>
  <%= link_to "Edit", [:edit, @project, @ticket] %>
<% end %>
<%= authorized?("delete tickets", @project) do %>
  <%= link_to "Delete", [@project, @ticket], method: :delete %>
<% end %>